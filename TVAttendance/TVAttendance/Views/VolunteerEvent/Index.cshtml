@model IEnumerable<TVAttendance.ViewModels.CalanderVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Volunteer Events</h1>
<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <div class="container">
        <div class="row">
            <!-- Remove style, just for current styling purposes-->
            <div class="col-md-3" style="border-style: solid">
                <button type="submit" class="btn btn-primary" name="findClosestUpcoming" value="true">
                   Find Nearest Upcoming Event
               </button>
                <button type="submit" class="btn btn-primary" name="findClosestPast" value="true">
                    Find Nearest Previous Event
                </button>
            </div>
            <div class="col">
                @* <button class="btn @ViewData["Filtering"]" type="button" data-bs-toggle="collapse" id="filterToggle"
                        data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                    Filter/Search @ViewData["numFilters"]
                </button> *@

                @*             <div class="collapse" id="collapseFilter"></div>
 *@            <div class="col-md-8">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="control-label">Select Year:</label>
                            @Html.DropDownList("selYear", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            <label class="control-label">Select Month:</label>
                            @Html.DropDownList("selMonth", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-2 align-self-end">
                            <input type="submit" name="actionButton" value="Filter"
                                   class="btn btn-outline-primary" />
                            <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <partial name="_CalanderPartialView" model="Model" />
                </div>
            </div>
           
        </div>
    </div>




</form>
