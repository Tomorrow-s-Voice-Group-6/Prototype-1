@model TVAttendance.Models.Shift

@{
    ViewData["Title"] = "Edit";
    var eventId = (int?)ViewBag.EventID ?? 0;
}

<h1>Edit Shift</h1>

<hr />
<form asp-action="Edit" method="post" asp-route-id="@Model.ID">
<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventID" />
            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <label asp-for="EventID" class="control-label">Event</label>
                <select disabled asp-for="EventID" class="form-control" asp-items="ViewBag.EventName"></select>
                <span asp-validation-for="EventID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftDate" class="control-label"></label>
                <input type="date" asp-for="ShiftDate" class="form-control" />
                <span asp-validation-for="ShiftDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftStart" class="control-label"></label>
                <input type="time" asp-for="ShiftStart" class="form-control" />
                <span asp-validation-for="ShiftStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftEnd" class="control-label"></label>
                <input type="time" asp-for="ShiftEnd" class="form-control" />
                <span asp-validation-for="ShiftEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
    </div>
</div>
</form>

<div>
    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="EventShift" asp-route-EventID="@ViewBag.EventID">Back to Event</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
