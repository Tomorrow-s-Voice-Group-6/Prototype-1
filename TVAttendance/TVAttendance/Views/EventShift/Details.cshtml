@model TVAttendance.Models.Shift

@{
    ViewData["Title"] = "Details";
}

<h1>Shift Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShiftStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShiftStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShiftEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShiftEnd)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Director") || User.IsInRole("Supervisor") || User.IsInRole("Admin"))
    {
        <a class="btn btn-outline-success" asp-controller="EventShift" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    }
    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="EventShift" asp-route-EventID="@Model.Event.ID">Back to Event</a>
</div>
