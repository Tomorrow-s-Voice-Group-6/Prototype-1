@model IEnumerable<TVAttendance.Models.Chapter>

@{
    ViewData["Title"] = "Chapter Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-outline-success" "Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director.FullName)
            </td>
            <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.ID">Details</a> 
                    @* <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.ID">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
