@model TVAttendance.Models.Chapter

@{
    ViewData["Title"] = "Chapter Create";
}

<h1>Create</h1>

<h4>Chapter</h4>
<hr />
<div class="row">
    <p class="required">Red asterisk indicates required field</p>
    <div class="col-md-4">
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City" class="control-label required"></label>
                <input id="chap-city" asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label required"></label>
                <input id="chap-address" asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirectorID" class="control-label required"></label>
                <select asp-for="DirectorID" class ="form-control" asp-items="ViewBag.DirectorID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="@ViewData["returnURL"]" class="btn btn-outline-primary" title="Return back to chapters log">Back to Chapters</a>
            </div>
        </form>
    </div>
</div>

<button class="btn btn-outline-primary" id="fill">Fill</button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/FillChapterFields.js"></script>
}

