@model TVAttendance.Models.Chapter

@{
    ViewData["Title"] = "Chapter Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Chapter</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            <td>@Html.DisplayFor(model => model.Street)</td>
        </dt>
        <dd class = "col-sm-10">
            <td>@Html.DisplayFor(model => model.Street)</td>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-outline-primary" asp-action="Index">Back to Chapters</a>
    </form>
</div>
