@model TVAttendance.Models.Chapter

@{
    ViewData["Title"] = "Chapter Edit";
}

<h1>Edit</h1>

<h4>Chapter</h4>
<hr />
<div class="row">
    <p class="required">Red asterisk indicates required field</p>
    <div class="col-md-4">
       
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="City" class="control-label required"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label required"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirectorID" class="control-label required"></label>
                <select asp-for="DirectorID" class="form-control" asp-items="ViewBag.DirectorID"></select>
                <span asp-validation-for="DirectorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-primary" asp-action="Index">Back to Chapters</a>
            </div>
        </form>
    </div>
</div>

