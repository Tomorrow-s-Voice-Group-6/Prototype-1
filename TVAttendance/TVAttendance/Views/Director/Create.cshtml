@model TVAttendance.Models.Director

@{
    ViewData["Title"] = "Director Create";
}

<h1>Create</h1>

<h4>Director</h4>
<hr />
<div class="row">
    <p class="required">Red asterisk indicates required field</p>
    <div class="col-md-4">
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" title="Enter first name.">
                <label asp-for="FirstName" class="control-label required"></label>
                <input asp-for="FirstName" class="form-control" placeholder="i.e. Henry" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group" title="Enter last name.">
                <label asp-for="LastName" class="control-label required"></label>
                <input asp-for="LastName" class="form-control" placeholder="i.e. Kane" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
@*             <div class="form-group">
                <label asp-for="HireDate" class="control-label required"></label>
                <input id="dir-register" asp-for="HireDate" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div> *@
            <div class="form-group" title="Enter email address.">
                <label asp-for="Email" class="control-label required"></label>
                <input asp-for="Email" class="form-control" placeholder="henrykane@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" title="Enter phone number.">
                <label asp-for="Phone" class="control-label required"></label>
                <input id="phoneNumber" asp-for="Phone" class="form-control" placeholder="i.e. 9052871679"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input type="hidden" class="form-check-input" asp-for="Status" value="true" checked="checked"/>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" title="Click to add record."/>
                <a href="@ViewData["returnURL"]" class="btn btn-outline-primary" title="Return back to directors log">Back to Directors</a>
            </div>

            <input id="modal-show" type="hidden" value="@ViewData["ModalPopupdir"]" />

            <partial name="_CreateNewDirector"></partial>
        </form>
    </div>
</div>

<button class="btn btn-outline-primary" id="fill">Fill</button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/FillDirectorFields.js"></script>
    <script src="~/js/ModalPopupdir.js"></script>
}
