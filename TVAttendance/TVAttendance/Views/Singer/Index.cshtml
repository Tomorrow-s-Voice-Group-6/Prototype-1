@model IEnumerable<TVAttendance.Models.Singer>

@{
    ViewData["Title"] = "Singer Index";
    var currentPage = ViewData["CurrentPage"] as int? ?? 1;
    var pageSize = ViewData["PageSize"] as int? ?? 15;
    var totalPages = ViewData["TotalPages"] as int? ?? 1;
}

<h1>Singers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <div class="form-horizontal">
        <button class="btn @ViewData["Filtering"]" type="button" data-bs-toggle="collapse" id="filterToggle"
                data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
            Filter/Search @ViewData["numFilters"]
        </button><br />
        <div class="collapse" id="collapseFilter">
            <div class="card card-body bg-light">
                <div class="row">  
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">Select by Chapter:</label>
                            @Html.DropDownList("ChapterID", null, "All Chapters", htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Search Singer Name:</label>
                            @Html.TextBox("SearchString", null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group" title="Filter by date of births that come after inputted date.">
                            <label class="control-label">Filter by youngest age:</label>
                            @Html.TextBox("YoungDob", null, new { @id = "young-dob", @type = "number", @class = "form-control", @min = "0", @max = "50" })
                        </div>
                        <div class="form-group" title="Filter by date of births that come before inputted date.">
                            <label class="control-label">Filter by oldest age:</label>
                            @Html.TextBox("OldestDob", null, new { @id = "old-dob", @type = "number", @class = "form-control", @min = "0", @max = "50" })
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group" title="Filter by Registration Dates that come after inputted date.">
                            <label class="control-label">Filter from Registration Date:</label>
                            @Html.TextBox("FromDate", null, new { @id = "date-older", @type = "date", @class = "form-control" })
                        <div class="form-group" title="Filter by Registration Dates that come before inputted date.">
                            <label class="control-label">Filter to Registration Date:</label>
                                @Html.TextBox("ToDate", null, new { @id = "date-newer", @type = "date", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Filter by Active Status:</label>
                            @Html.DropDownList("ActiveStatus", new List<SelectListItem>
                            {
                            new SelectListItem { Value = "true", Text = "Active" },
                            new SelectListItem { Value = "false", Text = "Archived" }
                            }, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group align-self-end">
                            <input type="submit" name="actionButton" value="Filter" class="btn btn-outline-primary" />
                            <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <input type="submit" name="actionButton" value="Full Name" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Chapter" class="btn btn-link" />
                </th>
                <th class="d-none d-lg-table-cell">
                    <input type="button" value="Emergency Contact" class="btn btn-link sort-inactive" />
                </th>
                <th class="d-none d-lg-table-cell">
                    <input type="submit" value="Phone" class="btn btn-link sort-inactive" />
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chapter.City)
                    </td>
                    <td class="d-none d-lg-table-cell">
                        @Html.DisplayFor(modelItem => item.EmergFullName)
                    </td>
                    <td class="d-none d-lg-table-cell">
                        @Html.DisplayFor(modelItem => item.DisplayPhone)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.ID">Details</a>
                        @if(item.Status == true){
                            <a class="btn btn-outline-primary" asp-action="Archive" asp-route-id="@item.ID">Archive</a>
                        }
                        else{
                            <a class="btn btn-outline-primary" asp-action="Restore" asp-route-id="@item.ID">Restore</a>
                        }
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_PagingNavBar" />
</form>

@section Scripts{
    <script src="~/js/FilterCorrection.js"></script>
}
