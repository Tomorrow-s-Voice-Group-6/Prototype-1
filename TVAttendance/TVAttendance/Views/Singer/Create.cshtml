@model TVAttendance.Models.Singer

@{
    ViewData["Title"] = "Singer Create";
}

<h1>Create</h1>

<h4>Singer</h4>
<hr />
<form name="singer-form" id="singer-create-form" asp-action="Create">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" type="date" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChapterID" class="control-label"></label>
                <select asp-for="ChapterID" class="form-control" asp-items="ViewBag.ChapterID"></select>
                <span asp-validation-for="ChapterID" class="text-danger"></span>
            </div>
            <div class=" form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="hidden" asp-for="Status" value="true" />
                </label>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="RegisterDate" class="control-label"></label>
                <input asp-for="RegisterDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date" class="form-control" />
                <span asp-validation-for="RegisterDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyContactFirstName" class="control-label"></label>
                <input asp-for="EmergencyContactFirstName" class="form-control" />
                <span asp-validation-for="EmergencyContactFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyContactLastName" class="control-label"></label>
                <input asp-for="EmergencyContactLastName" class="form-control" />
                <span asp-validation-for="EmergencyContactLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyContactPhone" class="control-label"></label>
                <input asp-for="EmergencyContactPhone" class="form-control" />
                <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
            </div>
            
        </div>
    </div>

    <div class="form-group">
        <input id="singer-create-save" type="button" value="Save" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#new-singer-modal" />
    </div>

    <partial name="_CreateNewSinger"></partial>
</form>

<div>
    <a class = "btn btn-outline-primary" asp-action="Index">Back to Singers</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let dobInput = document.getElementById("DOB");

            dobInput.addEventListener("change", function () {
                let selectedDate = new Date(dobInput.value);
                let today = new Date();
                today.setHours(0, 0, 0, 0);

                if (selectedDate > today) {
                    alert("Date of Birth cannot be in the future.");
                    dobInput.value = "";
                }
            });
        });
    </script>
    <script src="ModalCreateScript.js"></script>
}
