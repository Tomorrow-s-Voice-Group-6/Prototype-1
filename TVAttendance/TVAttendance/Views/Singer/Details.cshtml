@model TVAttendance.Models.Singer

@{
    ViewData["Title"] = "Singer Details";
}

<h1>Details</h1>

<div>
    <h4>Singer</h4>
    <hr />
    <dl class="row">
        <div class="col-lg-4">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-lg-6">
                @Html.DisplayNameFor(model => model.DOB)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.DisplayDOB)
            </dd>
        </div>
        <div class="col-lg-4">
            <dt class="col-lg-6">
                @Html.DisplayNameFor(model => model.RegisterDate)
            </dt>
            <dd class="col-lg-6">
                @Html.DisplayFor(model => model.DisplayRegistration)
            </dd>
            <dt class="col-lg-6">
                @Html.DisplayNameFor(model => model.Chapter)
            </dt>
            <dd class="col-lg-6">
                @Html.DisplayFor(model => model.Chapter.City)
            </dd>
        </div>
    </dl>

    <h3>Address Information</h3>
    <dl class="row">
        <div class="col-md-12">
            <dd class="col-md-12">
                @Html.DisplayFor(model => model.Address)
            </dd>
        </div>
    </dl>

    <h3>Emergency contact</h3>
    <dl class="row">
        <div class="col-md-5">
            <dt class="col-lg-6">
                @Html.DisplayNameFor(model => model.EmergFullName)
            </dt>
            <dd class="col-lg-6">
                @Html.DisplayFor(model => model.EmergFullName)
            </dd>
            <dt class="col-lg-6">
                @Html.DisplayNameFor(model => model.EmergencyContactPhone)
            </dt>
            @{
                var formattedPhone = Model.EmergencyContactPhone?.Insert(3, "-").Insert(7, "-") ?? "";
            }
            <dd class="col-sm-10">
                @formattedPhone
            </dd>
        </div>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ID" title="Click to edit this record">Edit</a>
    <a href="@ViewData["returnURL"]" class="btn btn-outline-primary" title="Return back to the singers log">Back to Singers</a>
</div>
