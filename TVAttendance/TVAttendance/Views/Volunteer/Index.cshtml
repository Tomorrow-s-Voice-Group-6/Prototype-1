@model IEnumerable<TVAttendance.Models.Volunteer>

@{
    ViewData["Title"] = "Index";
}

<h1>Volunteers</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create" title="Click to Create a new volunteer">Create New</a>
</p>

<!-- Export to Excel button -->
<a href="@Url.Action("ExportVolunteers", "Volunteer")" class="btn btn-success">Export</a>

<table class="table mt-4">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterDate)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOBFormatted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisterFormatted)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID" title="Click to edit volunteer">Edit</a>
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.ID" title="Click to view volunteer details">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
