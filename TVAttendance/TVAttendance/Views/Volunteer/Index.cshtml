@model IEnumerable<TVAttendance.Models.Volunteer>

@{
    ViewData["Title"] = "Index";
}

<h1>Volunteers</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create" title="Click to Create a new volunteer">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOBFormatted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterFormatted)
            </td>
            <td>
                <!-- Used Connor's code from singer for buttons -->
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID" title="Click to edit volunteer">Edit</a>
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.ID" title="Click to view volunteer details">Details</a>
                    @*|<a asp-action="Archive" asp-route-id="@item.ID">Archive</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
