@model TVAttendance.Models.Volunteer

@{
    ViewData["Title"] = "Create";
}

<h1>Create new Volunteer</h1>

<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">
            <p class="required">Red asterisk indicates required field</p>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label required" title="Enter the volunteer's First Name"></label>
                <input asp-for="FirstName" id="vol-first-name" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label required" title="Enter the volunteer's Last Name"></label>
                <input asp-for="LastName" id="vol-last-name" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label required" title="Enter the volunteer's Phone Number"></label>
                <input asp-for="Phone" id="vol-phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label required" title="Enter the volunteer's Email Address"></label>
                <input asp-for="Email" id="vol-email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label required" title="Enter the volunteers Date of Birth. Minimum age is 8 years old"></label>
                <input asp-for="DOB" id="vol-dob" type="date" value="@DateTime.Today.AddYears(-8).ToString("yyyy-MM-dd")"
                       class="form-control" title="Minimum age is 8 years old" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterDate" class="control-label required" title="Enter the volunteers Register Date."></label>
                <input asp-for="RegisterDate" id="vol-reg" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="RegisterDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input title="Submit the completed volunteer" type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-primary" asp-action="Index">Back to Volunteers</a>
            </div>
            <div>
                <button class="btn btn-outline-primary" id="fill" title="Auto complete with seeded data">Fill</button>
            </div>
        </div>
    </div>
</form>
<script src="~/js/NewFillVolunteerFields.js"></script>



