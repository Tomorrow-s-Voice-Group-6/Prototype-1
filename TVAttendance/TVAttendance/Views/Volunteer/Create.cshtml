@model TVAttendance.Models.Volunteer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Create Volunteer</h4>
<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">
            <p class="required">Red asterisk indicates required field</p>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label required" title="Enter the volunteer's First Name"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label required" title="Enter the volunteer's Last Name"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label required" title="Enter the volunteer's Phone Number"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label required" title="Enter the volunteer's Email Address"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label required" title="Enter the volunteers Date of Birth"></label>
                <input asp-for="DOB" type="date" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterDate" class="control-label required" title="Enter the volunteers Register Date"></label>
                <input asp-for="RegisterDate" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="RegisterDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input title="Submit the completed volunteer" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to Volunteers</a>
</div>

