@model TVAttendance.Models.Shift

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Shift</h4>

<div title="The date the event starts and ends.">
    <input value="@Model.Event.EventStart - @Model.Event.EventEnd"/>
</div>

<form asp-controller="VolunteerShift" asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="EventID" />
            <div title="The date of the shift.">
                <label asp-for="ShiftDate" class="control-label required"></label>
                <input asp-for="ShiftDate" class="form-control" type="date" />
                <span asp-validation-for="ShiftDate" class="text-danger"></span>
            </div>
            <div class="form-group" title="Time the shift starts.">
                <label asp-for="ShiftStart" class="control-label required"></label>
                <input asp-for="ShiftStart" class="form-control" type="time" value="@Model.ShiftStart.ToString("HH:mm")" />
                <span asp-validation-for="ShiftStart" class="text-danger"></span>
            </div>
            <div class="form-group" title="Time the shift ends.">
                <label asp-for="ShiftEnd" class="control-label required"></label>
                <input asp-for="ShiftEnd" class="form-control" type="time" value="@Model.ShiftEnd.ToString("HH:mm")" />
                <span asp-validation-for="ShiftEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="@ViewData["returnURL"]" class="btn btn-outline-primary" title="Return back to Volunteer Details.">Back to Volunteer</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
