@model IEnumerable<TVAttendance.Models.Shift>

@{
    TVAttendance.Models.Volunteer volunteer = (TVAttendance.Models.Volunteer)ViewBag.Volunteer;
    <partial name="_VolunteerDetails" model="volunteer"/>
    ViewData["Title"] = "Index";
}

<h1>Shifts</h1>

<a asp-action="Create"class="btn btn-success" title="Create a new Shift.">Create</a>

<form asp-action="Index" method="get">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Event.EventName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShiftStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShiftEnd)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.EventCity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShiftStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShiftEnd)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID" title="Click to edit Shift">Edit</a>
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-VolunteerID="@item.ID" title="Click to view shift details">Details</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

