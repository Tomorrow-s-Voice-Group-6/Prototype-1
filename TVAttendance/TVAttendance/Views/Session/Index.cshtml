@model IEnumerable<TVAttendance.Models.Session>

@{
    ViewData["Title"] = "Index";
    var currentPage = ViewData["CurrentPage"] as int? ?? 1;
    var pageSize = ViewData["PageSize"] as int? ?? 15;
    var totalPages = ViewData["TotalPages"] as int? ?? 1;
}
<h1>Past Sessions - Director View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <div class="form-horizontal">
        <button class="btn @ViewData["Filtering"]" type="button" data-bs-toggle="collapse" id="filterToggle"
                data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
            Filter/Search @ViewData["numFilters"]
        </button><br />
        <div class="collapse @ViewData["ShowFilter"]" id="collapseFilter">
            <div class="card card-body bg-light">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label class="control-label">Search Director Name:</label>
                        @Html.DropDownList("DirectorName", (SelectList)ViewBag.DirectorID, "All Directors",
                                 new { @class = "selectpicker", data_live_search = "true" })
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label">Select Chapter:</label>
                        @Html.DropDownList("ChapterID", null, "All Chapters",
                                 htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label">Search By Date:</label>
                        @Html.TextBox("searchString", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-2 align-self-end">
                        <input type="submit" name="actionButton" value="Filter"
                               class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <input type="submit" name="actionButton" value="Director" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Date" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Chapter" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Notes" class="btn btn-link" />
                </th>
                <th>
                    <!-- NEW: Attendance Rate column header -->
                    Attendance Rate
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chapter.Director.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chapter.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        <!-- NEW: Display "15/20 singers" style rate -->
                        @{
                            // If you track who attended in SingerSession.Attended == true:
                            var total = item.SingerSessions?.Count() ?? 0;
                            var attended = item.SingerSessions?.Count(ss => ss.Attended) ?? 0;
                        }
                        @($@"{attended}/{total} singers")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Session" asp-action="DownloadSessions">Export</a>

    <partial name="_PagingNavBar" />
</form>
<!-- From https://github.com/snapappointments/bootstrap-select/ (Bootstrap select) -->
<script>
        $(function () {
        $('selectpicker').selectpicker();
    });
</script>

